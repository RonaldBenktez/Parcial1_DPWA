@model Parcial1_PWA.Models.Subjects

@{
    ViewData["Title"] = "Create Subjects";
}

<h1>Create Subjects</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SubjectName" class="control-label"></label>
        <input asp-for="SubjectName" class="form-control" required />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VU" class="control-label"></label>
        <input asp-for="VU" type="number" class="form-control" min="18" required />
        <span asp-validation-for="VU" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <label asp-for="CreatedBy" class="control-label"></label>
        <input asp-for="CreatedBy" class="form-control" value="Admin" required />
        <span asp-validation-for="CreatedBy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <div class="form-group">
        <label asp-for="EditedBy" class="control-label"></label>
        <input asp-for="EditedBy" class="form-control" value="Admin" required />
        <span asp-validation-for="EditedBy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Edited" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
