@model Parcial1_PWA.Models.Subjects

@{
    ViewData["Title"] = "Subjects Details";
}

<h1>Subjects Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">SubjectName:</dt>
        <dd class="col-sm-10">@Model.SubjectName</dd>

        <dt class="col-sm-2">VU:</dt>
        <dd class="col-sm-10">@Model.VU</dd>

        <dt class="col-sm-2">Active:</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Created:</dt>
        <dd class="col-sm-10">@Model.Created.ToString("yyyy-MM-dd HH:mm:ss")</dd>

        <dt class="col-sm-2">Created By:</dt>
        <dd class="col-sm-10">@Model.CreatedBy</dd>

        <dt class="col-sm-2">Edited:</dt>
        <dd class="col-sm-10">@Model.Edited.ToString("yyyy-MM-dd HH:mm:ss")</dd>

        <dt class="col-sm-2">Edited By:</dt>
        <dd class="col-sm-10">@Model.EditedBy</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.SubjectId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
